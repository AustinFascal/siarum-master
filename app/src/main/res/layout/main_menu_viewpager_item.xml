<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:layout_margin="8dp">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/imageMainMenuViewPagerItem"
                android:src="@drawable/main_menu_profit_simulation"
                android:layout_width="match_parent"
                android:layout_height="130dp" />
            <TextView
                android:id="@+id/titleMainMenuViewPagerItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_below="@+id/imageMainMenuViewPagerItem"
                android:text="Menu1"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/descMainMenuViewPagerItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleMainMenuViewPagerItem"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="15dp"
                android:maxLines="2"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                android:layout_marginTop="3dp"
                android:text="Lorem ipsum dolor sit amet consectetur adipisicing elit"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>